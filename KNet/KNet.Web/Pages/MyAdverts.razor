@page "/myadverts"

<div>
    <MatButton>Delete Marked Ads</MatButton>
    <MatButton>Create new ad</MatButton>
</div>
<div>
    <MatButton>Select/Unselect All</MatButton>
    <h5>MY ADVERTS</h5>
</div>
<div style="display: inline-flex">
    <MatCheckbox @bind-Value="@checked1" TValue="bool"></MatCheckbox>
    <div class="card" style="width: 60vw">
        <div class="card-header">
            <h4>
                @advert.Heading - @advert.Created
                AD TITLE/COURSE TITLE - AD CREATED DATE YYYY-MM-DD
            </h4>
            <div class="text-sm-right">
                @advert.Category
            </div>
            <AdModal />
        </div>
        <div class="row">
            <div class="img-fluid col-md-4">
                <img src="favicon.ico">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <p class="card-text">@advert.Content.Substring(0, 100)</p>
                    <p class="card-text">@advert.StartDate - @advert.EndDate</p>
                    <p class="card-text">@advert.Location</p>
                    <p class="card-text">@advert.Price</p>
                </div>
            </div>
        </div>
    </div>
</div>


@code {
    public bool checked1 = false;
    public AdvertModel advert;
}
